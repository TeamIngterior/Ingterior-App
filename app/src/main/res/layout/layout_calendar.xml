<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/page_horizontal_padding"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:paddingBottom="14dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.ing.ui.text.body.Body1View
                android:id="@+id/tv_site_create_management_year_and_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:paddingLeft="8dp"
                android:paddingTop="20dp"
                android:paddingBottom="12dp"
                android:textColor="@color/black"
                tools:text="2024년 3월"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|bottom"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/ib_site_create_management_prev"
                    android:layout_width="36dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    app:srcCompat="@drawable/icon_arrow_left" />

                <ImageButton
                    android:id="@+id/ib_site_create_management_next"
                    android:layout_width="36dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    app:srcCompat="@drawable/icon_arrow_right"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_week_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sun7"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:enabled="true"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"

                android:text="일"
                android:textColor="@color/error_color"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_mon7"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:enabled="true"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"

                android:text="월"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_tue7"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:enabled="true"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"

                android:text="화"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_wed7"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:enabled="true"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"

                android:text="수"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_thu7"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:enabled="true"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"

                android:text="목"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_fri7"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:enabled="true"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"

                android:text="금"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_sat7"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:enabled="true"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="토"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_site_create_management_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spanCount="7"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:itemCount="42"
            tools:listitem="@layout/item_calendar_day"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <com.ing.ui.button.VisualDefaultButton
                android:id="@+id/vdb_site_create_management_calendar_cancel"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:visualText="취소"
                />


            <com.ing.ui.button.VisualButton
                android:id="@+id/vdb_site_create_management_calendar_ok"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:visualText="확인"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>