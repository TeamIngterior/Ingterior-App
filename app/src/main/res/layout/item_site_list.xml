<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/page_horizontal_padding"
    android:paddingEnd="@dimen/page_horizontal_padding"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.ing.ui.text.caption.Caption2View
            android:id="@+id/tv_construction_item_defaults_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingTop="6dp"
            android:paddingEnd="8dp"
            android:paddingBottom="6dp"
            android:text="@string/title_construction_manage"
            app:customTextColor="@color/secondary_color05"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ing.ui.text.caption.Caption2View
            android:id="@+id/tv_construction_item_management_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:paddingStart="8dp"
            android:paddingTop="6dp"
            android:paddingEnd="8dp"
            android:paddingBottom="6dp"
            android:text="@string/title_default_check"
            app:customTextColor="@color/secondary_color05"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_construction_item_defaults_caption"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ing.ui.button.VisualImageButton
            android:id="@+id/vib_construction_item_option"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_vertical_option_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/line_site_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <com.ing.ui.text.title.TitleH5View
            android:id="@+id/tv_construction_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:layout_marginEnd="6dp"
            tools:text="영통구 인계동 5동 912호 전체공사 진어쩌고 저쩌고 어쩌고 저쩌고"/>

        <com.ing.ui.check.VisualImageCheckBox
            android:id="@+id/ivc_construction_item_favorite"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:checkBoxSrc="@drawable/ic_favorite_20"
            app:uncheckBoxSrc="@drawable/ic_un_favorite_20"
            app:isChecked="false"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_construction_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_square"
        android:backgroundTint="@color/primary_color01"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/line_site_item_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:background="@drawable/bg_round_square"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_user_avatar"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <com.ing.ui.text.body.Body2View
                    android:id="@+id/tv_construction_item_creator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:customTextColor="@color/text_color_05"
                    android:layout_marginBottom="4dp"
                    tools:text="생성자: 1GA001"
                    />

                <com.ing.ui.text.body.Body2View
                    android:id="@+id/tv_construction_item_created_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:customTextColor="@color/text_color_05"
                    tools:text="2024.01.19"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_site_item_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_arrow_right"
                app:tint="@color/text_color_04"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/bg_round_square"
                android:padding="8dp"
                android:backgroundTint="@color/white">

                <com.ing.ui.text.body.Body2View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현장코드: "
                    app:customTextColor="@color/text_color_04"
                    />

                <com.ing.ui.text.body.Body2View
                    android:id="@+id/tv_construction_item_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1GA001A001"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_construction_item_code_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_default_button">

                <com.ing.ui.text.caption.Caption2View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="코드 공유"
                    app:customTextColor="@color/text_color_06"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>